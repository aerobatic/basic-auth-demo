{
  "name": "aerobatic-auth-demo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "http-server . -o -p 9999"
  },
  "_aerobatic": {
    "router": [
      {
        "module": "basic-auth",
        "path": "/protected-standard",
        "options": {
          "username": "$BASIC_AUTH_USERNAME",
          "password": "$BASIC_AUTH_PASSWORD"
        }
      },
      {
        "module": "basic-auth",
        "path": "/protected-custom",
        "options": {
          "username": "$BASIC_AUTH_USERNAME",
          "password": "$BASIC_AUTH_PASSWORD",
          "loginPage": "login.html"
        }
      },
      {
        "module": "custom-errors",
        "options": {
          "errors": {
            "401": "error.html",
            "403": "error.html",
            "404": "error.html"
          }
        }
      },
      {
        "module": "webpage"
      }
    ]
  }
}
